<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
      Add Bank
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Bank Name</th>
            <th>Nomer Rekening</th>
            <th>Nama Pemilik</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < bank.length; i++) { %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= bank[i].nameBank  %></td>
              <td><%= bank[i].nomerRekening  %></td>
              <td><%= bank[i].name  %></td>
              <td>
                <img src="http://localhost:3000/<%= bank[i].imageUrl %>" alt="imageUrl" height="70px">
              </td>
              <td>
                <form action="/admin/bank/<%= bank[i].id %>?_method=DELETE" method="POST">
                <a href="javascript:void()" type="button" class="btn btn-warning btn-circle btn-sm button-update" data-id="<%= bank[i].id %>" data-name="<%= bank[i].name %>"  data-namebank="<%= bank[i].nameBank %>"  data-nomerrekening="<%= bank[i].nomerRekening %>"><i class="fas fa-edit"></i></a>
                <button type="submit" href="" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                </form>
              </td>
            </tr>

          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('./add_modal.ejs') -%>
<%- include('./edit_modal.ejs') -%>
