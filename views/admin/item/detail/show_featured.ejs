

<div class="tab-pane fade show active" id="show-featured" role="tabpanel" aria-labelledby="nav-home-tab">

    <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
        <div class="row">
            <div class="col-md-5">
                <form action="/admin/item/add/featured" method="POST" enctype="multipart/form-data">
                    <div class="modal-body">
                            <div class="form-group">
                              <label for="name">Name</label>
                              <input type="text" class="form-control" id="name" required name="name" placeholder="Enter name">
                            </div>
                            <div class="form-group">
                              <label for="name">QTY</label>
                              <input type="number" class="form-control" id="qty" required name="qty" placeholder="Enter Qty">
                            </div>
                            <div class="form-group">
                              <label for="name">Image</label>
                              <input type="file" class="form-control" id="image" required name="image" >
                            </div>

                            <input type="hidden" name="itemId" value="<%= itemId %>">
                        </div>
                            <button type="Submit" class="btn btn-primary">Save</button>
                    </form>

            </div>

            <div class="col-md-7">

                <div class="table-responsive">
                  <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                    <thead>
                      <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>QTY</th>
                        <th>Image</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < item.length; i++) { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= item[i].name %></td>
                                <td><%= item[i].qty %></td>
                                <td>
                                    <img src="http://localhost:3000/<%= item[i].imageUrl %>" alt="imageUrl" height="70px">
                                  </td>
                                <td>
                                    <form action="/admin/item/<%= item[i].id %>/delete?_method=DELETE" method="POST">
                                        <a href="/admin/item/<%= item[i].id %>" class="btn btn-warning btn-circle btn-sm"><i class="fas fa-edit"></i></a>
                                        <button type="submit" href="" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                                      </form>

                                </td>

                            </tr>
                            
                        <% } %>
                    </tbody>
                  </table>
                </div>

            </div>
        </div>
    </div>
  </div>
  </div>
  